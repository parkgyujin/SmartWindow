<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#64C3FD"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@null"
            android:textColor="#090909"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:background="@drawable/skyimage"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="74dp"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/temperText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="온도" />

                <TextView
                    android:id="@+id/temper"
                    android:layout_width="135dp"
                    android:layout_height="54dp"
                    android:drawableEnd="@drawable/ic_thermostat"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/humiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="습도" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="135dp"
                    android:layout_height="54dp"
                    android:background="@drawable/outline"
                    android:drawableEnd="@drawable/ic_humidity"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dustText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="미세먼지" />

                <TextView
                    android:id="@+id/dust"
                    android:layout_width="141dp"
                    android:layout_height="54dp"
                    android:drawableEnd="@drawable/ic_masks"
                    android:gravity="center"
                    android:text=""
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="66dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="빗물감지" />

                <TextView
                    android:id="@+id/rainView"
                    android:layout_width="135dp"
                    android:layout_height="54dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gasText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="가스감지" />

                <TextView
                    android:id="@+id/gasView"
                    android:layout_width="135dp"
                    android:layout_height="54dp"
                    android:background="@drawable/outline"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/heatText"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_sunny"
                android:gravity="bottom|center"
                android:text="21º/10º" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@drawable/outline2">

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cityViewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="현재 지역" />

            <TextView
                android:id="@+id/cityView"
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:layout_marginBottom="308dp"
                android:gravity="center"
                android:text=""
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weatherViewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="오늘의 날씨" />

            <TextView
                android:id="@+id/weatherView"
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:background="@drawable/outline"
                android:gravity="center"
                android:text=""
                android:textSize="24sp"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="74dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempViewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="지역 온도" />

            <TextView
                android:id="@+id/tempView"
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:gravity="center"
                android:text=""
                android:textSize="24sp"
                tools:layout_editor_absoluteX="311dp"
                tools:layout_editor_absoluteY="46dp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="217dp">

        <TextView
            android:id="@+id/windowstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/windowsituation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.098" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="178dp"
            android:layout_height="183dp"
            android:contentDescription="@string/window"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.931"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/open" />

        <TextView
            android:id="@+id/windowstatus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="열려 있어요!"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/windowstatus"
            app:layout_constraintVertical_bias="0.03" />

        <Switch
            android:id="@+id/autoswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="AUTO모드"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/errorText"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/read_btn"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="CCTV로 이동" />

    <!-- 툴바, 추가된 소스 -->
</LinearLayout>